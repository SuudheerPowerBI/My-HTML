SELECT 
    A.DC_ID,
    A.WHSE_ID,
    A.PROD_ID,
    A.LOC_ID,
    A.LOC_RPLN_LVL_UOI AS REPLEN_LEVEL,
    V.ANNUAL_UNITS
FROM IPLAS A
LEFT JOIN (
    SELECT DC_ID, WHSE_ID, PROD_ID, SUM(PROD_QTY) AS ANNUAL_UNITS
    FROM ASELD
    WHERE START_DTIM >= DATEADD(YEAR, -1, CURRENT_DATE)
    GROUP BY DC_ID, WHSE_ID, PROD_ID
) V 
    ON A.DC_ID = V.DC_ID
    AND A.WHSE_ID = V.WHSE_ID
    AND A.PROD_ID = V.PROD_ID
WHERE A.PROD_ID = 100010
  AND A.LCUS_ID = 'P'
